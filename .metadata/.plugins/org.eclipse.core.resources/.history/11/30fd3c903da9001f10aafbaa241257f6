package LinkedListLeetCodeProblems;

import java.util.ArrayList;

import Node.Node;

public class AddTwoNumbers {
	
	public static void main(String[] args) {
		
		Node node1 = new Node(1);
		Node node2 = new Node(2);
		Node node3 = new Node(3);
		node1.next = node2;
		node2.next = node3;
		
		Node node4 = new Node(4);
		Node node5 = new Node(5);
		Node node6 = new Node(6);
		Node node7 = new Node(7);
		node4.next = node5;
		node5.next = node6;
//		node6.next = node7;
		
		
		ArrayList<Integer> answer = addTwoNumber(node1,node4);
		for(int answers : answer) {
			System.out.print(answers+"->");
		}
	}
	
	public static ArrayList<Integer> addTwoNumber(Node l1,Node l2) {
		
		
		Node temp1 = l1;
		Node temp2 = l2;
		int result = 0;
		int carry = 0;
		
		ArrayList<Integer> answer = new ArrayList<Integer>();
		
		if(temp1 == null || temp2 == null) {
			return null;
		}
		
		do {
			result = temp1.data + temp2.data;
			carry = result / 10;
			answer.add(result % 10);
			temp1 = temp1.next;
			temp2 = temp2.next;
		}
		while(temp1 != null || temp2 != null);
		
		if(temp1 == null) {
			result = carry + temp2.data;
			carry = result / 10;
			answer.add(result % 10);  
			temp2 = temp2.next;
		}
		
		if(temp2 == null) {
			result = carry + temp1.data;
			carry = result / 10;
			answer.add(result % 10);  
			temp1 = temp1.next;
		}
		answer.add(carry);
		
		return answer;
	}
	
}
